<!DOCTYPE html>
<html>
<head>
  <title>Reach</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar-text navbar-right">

	<% if tenant_signed_in? %> 
		<%= current_tenant.email %> &nbsp | &nbsp
		<%= link_to 'Edit Account', edit_tenant_path(current_tenant) %>  &nbsp | &nbsp
		<%= link_to 'Sign Out', destroy_tenant_session_path, method: :delete,  :confirm => 'Are you sure?'  %>
	<% elsif landlord_signed_in? %>
	    <%= current_landlord.email %> &nbsp | &nbsp
		<%= link_to 'Edit Account', edit_landlord_path(current_landlord) %>  &nbsp | &nbsp
		<%= link_to 'Sign Out', destroy_landlord_session_path, method: :delete,  :confirm => 'Are you sure?'  %>
	<% else %>
	    <%= link_to 'Sign In as Landlord', new_landlord_session_path %>	&nbsp | &nbsp
	    <%= link_to 'Sign In as Tenant', new_tenant_session_path %>
    <% end %>
    
</div>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<%= yield %>

</body>
</html>
